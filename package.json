  // これまで利用したコマンド類簡潔に利用できるようにしてくれるScriptを登録する
  // scriptに設定したスクリプトは、「npm run <script name>」という形式で実行することで、以下のコマンドを実行できる
  // ようすると
  // npm run tsc
  // npm run tslint
  // npm run typedoc
  // で以下のコマンドを実行できるようになる
  "scripts":{
    "tsc" : "tsc -p .",
    "tslint" : "tslint -p .",
    "typedoc" : "typedoc -p ."
  }
